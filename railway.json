{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "commands": [
            "npm config set registry https://registry.npmjs.org/",
            "npm install"
          ]
        },
        "build": {
          "commands": [
            "npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start"
  }
}
